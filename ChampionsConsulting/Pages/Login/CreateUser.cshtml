@page
@model ChampionsConsulting.Pages.Login.CreateUserModel
@{
}
<style>
    body {
        font-family: 'Arial', sans-serif;
        color: #333;
        line-height: 1.6;
        background-image: linear-gradient(#f6ea41, #f048c6);
        font-family: Verdana, sans-serif;
        margin: 0
    }

    .create-container {
        width: 100%;
        max-width: 400px;
        padding: 20px;
        padding-bottom: 100px;
        margin: 0 auto;
    }

    .create-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .create-form .form-group {
        margin-bottom: 15px;
    }

    .create-form .btn-block {
        width: 100%;
        padding: 10px;
    }

    .alert {
        margin-top: 20px;
    }

    footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        min-height: 50px;
        max-height: 80px;
        background-color: rgba(36, 32, 33, 0.9);
        color: white;
        font-family: "Helvetica Neue", Helvetica;
        padding: 10px 0px;
        padding-top: 10px;
        margin-top: 30px;
        font-weight: 100;
        clear: both;
    }
</style>


<h2>Sign up:</h2>
<br />
@{
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["FailMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["FailMessage"]</div>
    }

    <form asp-page="CreateUser">
    <div class="create-container">
        <div class="form-group">First Name</div>
        <input asp-for="FirstName" placeholder="First Name" class="form-control" id="FirstNameInput" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
        <br />

        <div class="form-group">Last Name</div>
        <input asp-for="LastName" placeholder="Last Name" class="form-control" id="LastNameInput" />
        <span asp-validation-for="LastName" class="text-danger"></span>
        <br />

        <div class="form-group">Username</div>
        <input asp-for="Username" placeholder="Username" class="form-control" id="UsernameInput" />
        <span asp-validation-for="Username" class="text-danger"></span>
        <br />

        <div class="form-group">Password</div>
        <input asp-for="Password" placeholder="Password" class="form-control" id="PasswordInput" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
        <br />

        <div class="form-group">Email</div>
        <input asp-for="Email" placeholder="Email" class="form-control" id="EmailInput" />
        <span asp-validation-for="Email" class="text-danger"></span>
        <br />

            <div class="form-group">Phone</div>
            <input asp-for="Phone" placeholder="Phone" class="form-control" id="PhoneInput" />
            <span asp-validation-for="Phone" class="text-danger"></span>
            <br />

        <div class="form-group">Role</div>
        <select asp-for="UserType" placeholder="Role" class="form-select" id="UserTypeInput">
            <option selected>Participant</option>
            <option value="Presenter">Presenter</option>
        </select>
        <span asp-validation-for="UserType" class="text-danger"></span>
        <br />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <br />

        <input type="submit" class="btn btn-primary" value="Create" />
        <button asp-page-handler="PopulateHandler" class="btn btn-primary" id="PopulateButton">Populate</button>
        <button asp-page-handler="ClearHandler" class="btn btn-primary">Clear</button>
        <button asp-page-handler="ReturnHandler" class="btn btn-primary">Return</button>
        </div>
    </form>
}


<script>
    document.getElementById('PopulateButton').addEventListener('click', function (event) {
        event.preventDefault(); // Prevent the default form submission

        document.getElementById('FirstNameInput').value = 'John';
        document.getElementById('LastNameInput').value = 'Smith';
        document.getElementById('UsernameInput').value = 'Test-Username';
        document.getElementById('PasswordInput').value = 'TestPass';
        document.getElementById('EmailInput').value = 'TestEmail@example.com';
        document.getElementById('UserTypeInput').value = 'Attendee';
    });
</script>
