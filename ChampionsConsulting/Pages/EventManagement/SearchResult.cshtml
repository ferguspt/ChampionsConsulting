@page
@model ChampionsConsulting.Pages.EventManagement.SearchResultModel
@{
}
<style>
    body {
        font-family: 'Arial', sans-serif;
        color: #333;
        line-height: 1.6;
        background-image: linear-gradient(#f048c6, #f6ea41 );
        font-family: Verdana, sans-serif;
        margin: 0
    }

    footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        min-height: 50px;
        max-height: 80px;
        background-color: rgba(36, 32, 33, 0.9);
        color: white;
        font-family: "Helvetica Neue", Helvetica;
        padding: 10px 0px;
        padding-top: 10px;
        margin-top: 30px;
        font-weight: 100;
        clear: both;
    }
</style>
<form method="post">
    <table class="table table-striped table-bordered">
        <tr>
            <th>Presenter</th>
            <th>Event</th>
            <th>Meeting</th>
            <th>Description</th>
            <th>Date</th>
        </tr>
        @foreach (var data in Model.Data)
        {
            <tr>
                <td>@data.FirstName</td>
                <td>@data.EventName</td>
                <td>@data.MeetingName</td>
                <td>@data.MeetingDescription</td>
                <td>@data.MeetingDate.ToShortDateString()</td>
            </tr>
        }
    </table>
    <input type="submit" value="Search Again" class="btn btn-primary" />
    <button asp-page-handler="ReturnHandler" class="btn btn-primary" id="ReturnButton">Return</button>
</form>
