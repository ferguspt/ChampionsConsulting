@page
@model ChampionsConsulting.Pages.EventManagement.SubEventSignUpModel
@{
}
<style>
    body {
        font-family: 'Arial', sans-serif;
        color: #333;
        line-height: 1.6;
        background-image: linear-gradient(#f048c6, #f6ea41 );
        font-family: Verdana, sans-serif;
        margin: 0
    }

    footer {
        position: fixed;
        bottom: 0;
        width: 100%;
        min-height: 50px;
        max-height: 80px;
        background-color: rgba(36, 32, 33, 0.9);
        color: white;
        font-family: "Helvetica Neue", Helvetica;
        padding: 10px 0px;
        padding-top: 10px;
        margin-top: 30px;
        font-weight: 100;
        clear: both;
    }
</style>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (HttpContext.Session.GetString("Username") != null)
{
    <form asp-action="ChooseEvent">
        <h2>Choose an event to sign up for:</h2>
        <br />
        <select asp-for="EventID" asp-items="Model.Events">
            <option value="">Choose an event</option>
        </select>
        <br />
        <br />
        <input asp-for="EventID" type="submit" value="Select" class="btn btn-primary" />
        <button asp-page-handler="ReturnHandler" class="btn btn-primary">Return</button>
    </form>
}

@if (HttpContext.Session.GetString("Username") == null)
{
    <h2 class="center">You must <b>login</b> before accesing this feature.</h2>
}