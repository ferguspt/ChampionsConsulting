@page
@using System.Data.SqlClient
@using ChampionsConsulting.Pages.DB
@model ChampionsConsulting.Pages.EventManagement.EditModel
@{
}

@{
    if (TempData["UpdatedEventSuccess"] != null)
    {
        <div class="alert alert-success">@TempData["UpdatedEventSuccess"]</div>
    }
}


<form asp-page="Edit">
    <input type="hidden" asp-for="@Model.CurrEventToUpdate.EventID" />
    <div class="form-text">Event Name</div>
    <input asp-for="@Model.CurrEventToUpdate.Name" placeholder="Event Name" class="form-control" id="EventNameInput" />
    <span asp-validation-for="CurrEventToUpdate.Name" class="text-danger"></span>
    <br />

    <div class="form-text">Event Description</div>
    <input asp-for="@Model.CurrEventToUpdate.Description" placeholder="Event Description" class="form-control" id="EventDescriptionInput" />
    <span asp-validation-for="CurrEventToUpdate.Description" class="text-danger"></span>
    <br />

    <div class="form-text">Start Time</div>
    <input asp-for="@Model.CurrEventToUpdate.StartDateAndTime" type="datetime" placeholder="Start Date and Time" class="form-control" id="StartDateAndTimeInput" />
    <span asp-validation-for="CurrEventToUpdate.StartDateAndTime" class="text-danger"></span>
    <br />

    <div class="form-text">End Time</div>
    <input asp-for="@Model.CurrEventToUpdate.EndDateAndTime" type="datetime" placeholder="End Date and Time" class="form-control" id="EndDateAndTimeInput" />
    <span asp-validation-for="CurrEventToUpdate.EndDateAndTime" class="text-danger"></span>
    <br />

    <div class="form-text">Choose Location</div>
    <select asp-for="@Model.CurrEventToUpdate.LocationID" asp-items="Model.Location">
        <option value="" id="LocationID">Choose Location</option>
    </select>
    <br />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <br />

    <input type="submit" class="btn btn-dark" value="Update" />
    <button asp-page-handler="PopulateHandler" class="btn btn-dark" id="PopulateButton">Populate</button>
    <button asp-page-handler="ClearHandler" class="btn btn-dark">Clear</button>
    <button asp-page-handler="ReturnHandler" class="btn btn-dark">Return</button>
</form>

<script>
    document.getElementById('PopulateButton').addEventListener('click', function (event) {
        event.preventDefault(); // Prevent the default form submission

        document.getElementById('EventNameInput').value = 'Telecommunication Expo ';
        document.getElementById('EventDescriptionInput').value = 'Learn all the telecommunications around the world';
        document.getElementById('StartDateAndTimeInput').value = '10/13/2024 9:00 AM';
        document.getElementById('EndDateAndTimeInput').value = '10/13/2024 11:00 AM';
        document.getElementById('LocationID').value = '1';
    });
</script>