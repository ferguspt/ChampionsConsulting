@page
@model ChampionsConsulting.Pages.AdminPages.UserSearchModel
@{
}
<head>
    <link rel="stylesheet" type="text/css" href="site.css" />
</head>
<body>
@if (HttpContext.Session.GetString("Username") != null)
{
    <form method="post">
        <table class="table">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Username</th>
                <th>Role</th>
                <th>Meeting Name</th>
                <th>Meeting Type</th>
                <th>Meeting Date</th>
                <th>Meeting Status</th>
                <th>Event Name</th>
                <th>Location</th>
                <th>Event Status</th>
            </tr>
            @foreach (var data in Model.Data)
            {
                <tr>
                    <td>@data.FirstName</td>
                    <td>@data.LastName</td>
                    <td>@data.Email</td>
                    <td>@data.Phone</td>
                    <td>@data.Username</td>
                    <td>@data.UserType</td>
                    <td>@data.MeetingName</td>
                    <td>@data.MeetingType</td>
                    <td>@data.MeetingDate.ToShortDateString()</td>
                    <td>@data.MeetingStatus</td>
                    <td>@data.EventName</td>
                    <td>@data.LocationName</td>
                    <td>@data.EventStatus</td>
                </tr>
            }
        </table>
        <input type="submit" value="Return" class="btn btn-primary" />
    </form>
}

@if (HttpContext.Session.GetString("Username") == null)
{
    <h2 class="center">You must <b>login</b> before accesing this feature.</h2>
}
</body>